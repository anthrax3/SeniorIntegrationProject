
@{
    ViewBag.Title = "Settings";
}

<h2>Settings</h2>

<div class="row">
    <div class="col-sm-12">
        <h3>Security</h3>
        <p>Set the level of security for the application</p>
        @using (Html.BeginForm("UpdateSecurity", "Home", FormMethod.Post))
        {
            @Html.RadioButton("securityLevel", "high") <label>High</label> <br />
            @Html.RadioButton("securityLevel", "low") <label>Low</label> <br />
            <input type="submit" id="submitId" value="Submit" />
        }
    </div>
</div>
